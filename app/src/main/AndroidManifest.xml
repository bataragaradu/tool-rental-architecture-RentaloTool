<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rbinnovative.scrollingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.rbinnovative.scrollingapp.ui.activity.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.rbinnovative.scrollingapp.ui.activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                    android:name="com.rbinnovative.scrollingapp.ui.activity.ScrollingActivity"
                    android:label="@string/app_name"
                    android:theme="@style/Theme.ScrollingApp.NoActionBar"/>
        <activity
            android:name="com.rbinnovative.scrollingapp.ui.activity.SignupActivity"
            android:theme="@style/AppTheme.Dark"/>

        <activity
            android:name="com.rbinnovative.scrollingapp.ui.activity.DetailedToolActivity"
            android:theme="@style/AppTheme.Dark"/>

    </application>
</manifest>